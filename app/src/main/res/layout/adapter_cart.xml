<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="cart"
            type="com.example.valorpay.model.Product" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toStartOf="@+id/product_total_amt">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/child_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/product_total_amt">

        <ImageView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/apple"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            tools:text="name"
            android:text="@={cart.name}"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            tools:text="10"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/img"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:text='@{cart.currency+""+cart.price}'
            android:maxLines="1"
            android:ellipsize="end"/>

            <TextView
                android:id="@+id/minus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="@string/minus"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:background="@drawable/cart_add_bg"
                app:layout_constraintStart_toEndOf="@+id/img"
                app:layout_constraintTop_toBottomOf="@+id/price" />


            <TextView
                android:id="@+id/quantity_txt"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                tools:text="10"
                android:text="@{String.valueOf(cart.itemCount)}"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/minus"
                app:layout_constraintTop_toBottomOf="@+id/price"/>


            <TextView
                android:id="@+id/add_item"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="@string/plus"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/cart_add_bg"
                app:layout_constraintStart_toEndOf="@+id/quantity_txt"
                app:layout_constraintTop_toBottomOf="@+id/price" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/product_total_amt"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        tools:text="$1000"
        android:text='@{cart.currency+""+String.format("%.2f",cart.itemTotalPrice)}'
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <!--android:text='@{cart.currency+""+String.valueOf(cart.itemTotalPrice)}'-->

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>